<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TrocaLivros - Meus livros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/css">
</head>
<body class="bg-white">
    <div>
        <%- include ('Headers/headerPrivate.ejs') %>
    </div>
    <div class="container-fluid mb-3">
        <div class="row mt-5">
            <div class="col-12">
                <h1 class="text-center fw-bold mt-5 mb-5 text-primary">Cadastre seu livro</h1>
            </div>
            <div class="col-2"></div>
            <div class="col-8">
                <div class="border border-primary border-4 shadow shadow-lg rounded p-3 pt-2">
                    <form action="/meusLivros" method="post">
                        <label class="form-label text-dark fw-bold" for="title">Titulo do livro</label>
                        <input class="form-control" id="title" name="title" type="text" placeholder="Titulo do livro..." required>
                        <label class="form-label text-dark fw-bold mt-2" for="author">Autor</label>
                        <input class="form-control" id="author" name="author" type="text" placeholder="Nome/Pseudônimo do autor do livro..." required>
                        <label class="form-label text-dark fw-bold mt-2" for="currentCondition">Condição do livro</label>
                        <input class="form-control" id="currentCondition" name="currentCondition" type="" placeholder="Diga as condições de cuidado do livro..." required>
                        <label class="form-label text-dark fw-bold mt-2" for="description">Descrição do livro</label>
                        <input class="form-control" id="description" name="description" type="text" placeholder="Diga algo sobre o livro, sua experiencia com ele, algum defeito fisico, algo que queira comentar...">
                        <label class="form-label text-dark fw-bold mt-2" for="situation">Situação do livro</label>
                        <input class="form-control" pattern="[0-1]{1}" id="situation" name="situation" type="text" placeholder="0 = Livro indisponível - 1 = Livro disponível">
                        <button class="btn btn-danger mt-3 me-3" type="reset">Limpar campos</button>
                        <button class="btn btn-primary mt-3" type="submit">Cadastrar livro</button>
                    </form>
                </div>
                <div class="col-2"></div>
                <div class="container-fluid mb-3">
                    <div class="row mt-5">
                        <div>
                            <h1 class="text-center fw-bold mt-2 mb-5 text-primary">Meus livros cadastrados</h1>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <div class="border border-primary border-4 shadow shadow-lg rounded p-2 m-0">
                                <table class="table table-bordered table-striped shadow shadow-lg m-0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th class="bg-primary text-white">ID</th>
                                            <th class="bg-primary text-white">Título</th>
                                            <th class="bg-primary text-white">Autor</th>
                                            <th class="bg-primary text-white">Condição</th>
                                            <th class="bg-primary text-white">Descrição</th>
                                            <th class="bg-primary text-white">Situação</th>
                                            <th class="bg-primary text-white">Ação</th>
                                            <th class="bg-primary text-white">Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% objLivros.forEach(livro => { %>
                                            <tr>
                                                <td class="bg-primary text-white fw-bold"><%= livro.id %></td>
                                                <td class="bg-light fw-semibold"><%= livro.title %></td>
                                                <td class="bg-light fw-semibold"><%= livro.author %></td>
                                                <td class="bg-light fw-semibold"><%= livro.currentCondition %></td>
                                                <td class="bg-light fw-semibold"><%= livro.description %></td>
                                                <td class="bg-light fw-semibold"><%= livro.situation ? 'Disponível' : 'Indisponível' %></td>
                                                <td class="bg-light fw-semibold">
                                                    <a href="/editLivro/<%= livro.id %>" class="btn btn-info text-white px-1 py-0 shadow shadow-sm">Editar</a>
                                                </td>
                                                <td class="bg-light fw-semibold">
                                                    <form action="/deleteLivro/<%= livro.id %>" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este livro?');">
                                                        <button type="submit" class="btn btn-danger px-1 py-0 shadow shadow-sm">Excluir</button>
                                                    </form>
                                                </td>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</body>
</html>
